{
	"name": "laravel/laravel",
	"description": "The Laravel Framework.",
	"keywords": ["framework", "laravel"],
	"license": "MIT",
	"type": "project",
	"require": {
		"laravel/framework": "5.0.*",
        "rhumsaa/uuid": "~2.",
		"satooshi/php-coveralls": "~0",
		"tokenly/xchain-client": "dev-master",
        "tokenly/bitcoin-currency-lib": "dev-master",
		"tokenly/token-generator": "dev-master",
		"tokenly/pusher-client": "dev-master",
		"tokenly/laravel-event-log": "dev-master",
		"tokenly/laravel-api-provider": "dev-master",
		"linusu/bitcoin-address-validator": "~0",
		"metabor/statemachine": "1.1.*",
		"pda/pheanstalk": "~3",
		"guzzlehttp/guzzle": "~5.0"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"graphp/graphviz": "~0.2.0",
		"phpspec/phpspec": "~2.1",
		"mockery/mockery": "0.9.*@dev"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"Swapbot\\": "app/",
			"Tokenly\\LaravelBlockingBeanstalkd\\": "vendor/tokenly/laravel-blocking-beanstalkd/src/Tokenly/LaravelBlockingBeanstalkd"
		}
	},
	"autoload-dev": {
		"classmap": [
            "tests/testlib/",
			"tests/tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
    "config": {
        "preferred-install": "auto"
    },

    "minimum-stability": "dev",
    "prefer-stable": true
}
